<!DOCTYPE html>
<html>
  <head>
    <title>Best Restaurants</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="/css/app.css" type="text/css">
  </head>
  <body>
    <div class="container">

      <div class="pagehead">
        <h1>Besteraunts</h1>
      </div>

      <div class="row">
        <div id="left-col" class="col-md-6">
          <h2>List of Restaurants</h2>

          <form action="/" method="post">
            <div class="form-group">
              <select id="cuisine" name="cuisine" class="form-control" type="text" onchange="this.form.submit();">
                <option selected="true" disabled="disabled">Choose a Cuisine</option>
                #foreach($cuisine in $cuisines)
                <option value="$cuisine.getId()">$cuisine.getType()</option>
                #end
              </select>
            </div>
          </form>

          #if($cuisineName)
          <h4>$cuisineName</h4>
          #end
          <ul>
            #foreach ($restaurant in $restaurants)
            <a href="/restaurant/$restaurant.getId()"><li>$restaurant.getName()</li></a>
            #end
          </ul>

          <h2>Edit Restaurants</h2>
          <a href="/new-restaurant"><button class="btn btn-info">Add a Restaurant</button></a>
        </div>
        <div id="right-col" class="col-md-6">
          #parse( $template )
        </div>
      </div>


    </div>
  </body>
</html>
